<div class="container">
  <div class="row">
    <h2>投稿詳細</h2>
  </div>

  <div class="row">
    <div class="col content-block ">

      <div class="book-info-picture col">
        <%= link_to (image_tag(@book.large_image_url)), @book.item_url, target: :_blank, rel: "noopener noreferrer", class:"book-image" %>
      </div>

      <div class="book-info col">

        <table>
          <tbody>
            <tr>
              <span>投稿者：<%= link_to @book.user.name, user_path(@book.user.id) %></span><br>
              <span>タイトル：<%= @book.title %></span><br>
              <span>著者：<%= @book.author %></span><br>
              <span>商品説明：<%= @book.item_caption %></span><br>
              <span>商品価格：<%= @book.item_price %></span><br>
              <span>出版社名：<%= @book.publisher_name %></span>
            </tr>
          </tbody>
        </table>

        <!--ブックマークボタン-->
        <% if @book.bookmarked_by?(current_user) %>
          <%= link_to "bookmarkから削除", book_bookmark_path(@book), method: :delete %><br>
        <% else %>
          <%= link_to "bookmarkに追加", book_bookmarks_path(@book), method: :post %><br>
        <% end %>
      </div>

    </div>
    <div class="col content-block ">

      <!--コメント投稿フォーム-->
      <%= form_with model:[@book,@comment], local: true do |f| %>
        <%= f.text_area :body, size:"60x3", rows:'3', placeholder: "コメントを入力" %>
        <%= f.submit "送信する" %>
      <% end %>

      <!--コメント一覧-->
      <% @book.comments.each do |comment| %>
        <div class="comment-box">
          <%= link_to user_path(comment.user_id) do %>
            <%= attachment_image_tag comment.user, :profile_image, :fill, 50, 50, fallback: "no-image.jpeg", size: "40x40" %>
            <%= comment.user.name %>
          <% end %>

          ><%= comment.body %><br>
          <%= comment.created_at.to_s(:datetime) %>

          <!--いいねボタン-->
          <% if comment.liked_by?(current_user) %>
            <%= link_to comment.likes.count, book_comment_like_path(@book,comment), method: :delete, class: "fas fa-heart heart_red" %><br>
          <% else %>
            <%= link_to comment.likes.count, book_comment_likes_path(@book,comment), method: :post, class: "fas fa-heart heart_blue" %><br>
          <% end %>
        </div>
      <% end %>

    </div>
  </div>
</div>