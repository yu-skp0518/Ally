<div class="container">
  <div class="row justify-content-center">
    <h2>プロフィール編集</h2>
  </div>
  <div class="row justify-content-center">
    <%= form_with model: @user, url:user_path(@user), lacal:true, method: :patch do |f| %>

      <h4>プロフィール画像</h4>
      <%= f.attachment_field :profile_image %>

      <h4>表示名</h4>
      <%= f.text_field :name %>

      <h4>アカウント名</h4>
      <%= f.text_area :nick_name %>

      <h4>メールアドレス</h4>
      <%= f.text_area :email %>

      <h4>プロフィール</h4>
      <%= f.text_area :profile %>

      <%= f.submit '変更を保存' %>
    <% end %>

  </div>
</div>