<div class="container">
  <div class="row">
    <h2>新規会員登録</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

    <div class="row form-for-resistration">
      <div class="col-3">
        <%= f.label :name,"アカウント名(英数字)" %>
      </div>

      <div class="col-3">
        <%= f.text_field :name, placeholder: "アカウント名(英数字)", autofocus: true, autocomplete: "アカウント名(英数字)" %>
      </div>
    </div>


    <div class="row form-for-resistration">
        <div class="col-3">
          <%= f.label :nick_name,"表示名" %>
        </div>

        <div class="col-3">
          <%= f.text_field :nick_name, placeholder: "表示名", autofocus: true, autocomplete: "表示名" %>
        </div>
    </div>


    <div class="row form-for-resistration">
        <div class="col-3">
          <%= f.label :email,"メールアドレス" %>
        </div>

        <div class="col-3">
          <%= f.email_field :email, placeholder: "メールアドレス", autofocus: true, autocomplete: "email" %>
        </div>
    </div>

    <%= f.hidden_field :is_valid, :value => true %>


    <div class="row form-for-resistration">
        <div class="col-3">
          <%= f.label :password,"パスワード" %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %>文字以上)</em>
          <% end %>
        </div>
        <div class="col-3">
          <%= f.password_field :password, placeholder: "パスワード", autofocus: true, autocomplete: "new-password" %>
        </div>
    </div>


    <div class="row form-for-resistration">
        <div class="col-3">
          <%= f.label :password,"パスワード(確認用)" %>
        </div>
        <div class="col-3">
          <%= f.password_field :password_confirmation, placeholder: "パスワード(確認用)", autofocus: true, autocomplete: "new-password" %>
        </div>
    </div>

    <div class="row form-for-resistration">
        <div class="col-3"></div>
        <div class="col-3">
          <%= f.submit "新規登録", class:"btn btn-outline-success" %>
        </div>
      </div>


    <div class="row form-for-resistration subtitle">
        <h4>既に登録済みの方</h4>
    </div>
    <div class="row form-for-resistration">
        <p><%= link_to "こちら", new_user_session_path %>からログインしてください。</p>
    </div>

  <% end %>
</div>