<div class="container">
  <div class="row justify-content-center">
    <h3>Bookmark一覧</h3>
  </div>
  <div class="row justify-content-center">
    <table>
      <thead>
        <tr>
          <th><strong>タイトル</strong></th>
          <th><strong>投稿者</strong></th>
          <th><strong>投稿日</strong></th>
        </tr>
      </thead>

      <tbody>
      <% @bookmarks.each do |bookmark| %>
        <tr>
          <td>
            <div class="col bookmark-item">
              <%= link_to bookmark.book.title, book_path(bookmark.book.id) %>
            </div>
          </td>
          <td>
            <div class="col bookmark-item">
              <%= link_to bookmark.book.user.name, user_path(bookmark.book.user.id) %>
            </div>
          </td>
          <td>
            <div class="col bookmark-item">
              <%= bookmark.book.created_at.to_s(:datetime) %>
            </div>
          </td>
        </tr>
      <% end %>
      </tbody>

    </table>
  </div>
</div>
