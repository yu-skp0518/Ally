<div class="container">

  <div class="row justify-content-center">
      <h2 class="title"><strong>ユーザー詳細画面</strong></h2>
  </div>

  <div class="row">
    <div class="col profile-group">
      <div class="col profile-group">  

        <table>
          <tbody>
            <td><%= attachment_image_tag @user, :profile_image, :size =>'80x80', fallback: "reading.jpg", class:"profile-image" %></td>
            <tr>
              <td><strong>アカウント名：</strong></td>
              <td><%= @user.name %></td>
            </tr>

            <tr>
              <td><strong>表示名：</strong></td>
              <td><%= @user.nick_name %></td>
            </tr>

            <tr>
              <td><strong>プロフィール：</strong></td>
              <td><%= @user.profile %></td>
            </tr>

            <tr>
              <td><strong>フォロー：</strong><%= link_to link_to @user.followings.count, admin_user_relationships_followings_path(@user) %></td>
            </tr>

            <tr>
              <td><strong>フォロワー：</strong><%= link_to link_to @user.followers.count, admin_user_relationships_followers_path(@user) %></td>
            </tr>

            <tr>
              <td><%= link_to "Bookmark一覧", user_bookmarks_path(@user) %></td>
            </tr>

            <tr>
              <td><%= link_to "いいねしたコメント一覧", user_likes_path(@user) %></td>
            </tr>

            <tr>
              <td>会員ステータス</td>
              <% if @user.is_valid == false %>
                <td><strong class="text-danger">退会済み</strong></td>
              <% else %>
                <td><strong class="text-secondary">有効</strong></td>
              <% end %>
            </tr>

            <tr>
            <%= form_with model: @user, url: admin_user_path(@user.id), local: true do |f| %>
            　<td><%= f.radio_button :is_valid, true %>
            　<%= f.label :is_valid, "有効", {value: :true, style: "display: inline-block;"} %>
            　<%= f.radio_button :is_valid, false %>
            　<%= f.label :is_valid, "退会", {value: :false, style: "display: inline-block;"} %></td>
              <td><%= f.submit '変更を保存' ,class: "btn btn-secondary" %></td>
          　<% end %>
            </tr>


          </tbody>
        </table>


    </div>

    <div class="col">
      <div class="row justify-content-center">
        <h4 class="title"><strong>最新の投稿</strong></h4>
      </div>

      <div class="row book-list">
        <table>
          <thead>
            <tr>
              <th>
                <th><strong>タイトル</strong></th>
                <th><strong>著者</strong></th>
              </th>
            </tr>
          </thead>

          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td class="book-list-item book-list-picture"><%= link_to (image_tag(book.small_image_url)), book.item_url, target: :_blank, rel: "noopener noreferrer" %></td>
                <td class="book-list-item"><%= link_to book.title, book_path(book.id) %></td>
                <td class="book-list-item"><%= book.author %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

    </div>

  </div>
</div>