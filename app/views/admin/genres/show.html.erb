<div class="container">
  <div class="row justify-content-center">
    <h2>ジャンルが"<strong><%= @genre.name %></strong>"の投稿一覧</h2>
    <h3>（全<%= @amount %>件）</h3>
  </div>
  <div class="row justify-content-center">
    <table>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to book.title, admin_book_path(book.id) %></td>
        <td><%= link_to book.user.nick_name, admin_user_path(book.user.id) %></td>
        <td><%=  book.created_at.to_s(:datetime) %></td>
      </tr>
    <% end %>
    </table>
  </div>
</div>