<div class="container">
  <div class="row justify-content-center">
    <h2><strong>ジャンル追加</strong></h2>
  </div>
  <div class="row justify-content-center">
    <%= form_with(model: @genre, :url => {:controller => "admin/genres"}) do |f| %>

      <div class="row form-for-resistration">
          <div class="col-6">

            <%= f.text_field :name, placeholder: "ジャンル名を入力", autofocus: true, autocomplete: "ジャンル名を入力" %>
          </div>
      </div>

      <div class="row form-for-resistration">
        <div class="col-7"></div>
        <div class="col-5">
          <%= f.submit '新規登録', class:"btn btn-success" %>
        </div>
      </div>

    <% end %>
  </div>
  <div class="row justify-content-center">
    <h2><strong>ジャンル一覧</strong></h2>
  </div>
  <div class="row justify-content-center">
    <% @genres.each do |genre| %>
      <h4 class="col"><%=  link_to genre.name, admin_genre_path(genre.id) %></h4>
    <% end %>
  </div>
</div>
