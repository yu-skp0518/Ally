<% if @model == "user" %>
  <div class="row  justify-content-center">
    <h2>ユーザ一覧</h2>
  </div>

  <div class="row  justify-content-center">
    <% @datas.each do |datas| %>
    <table class="table table-striped table-bordered">
      <thead>
          <tr>
              <th>ユーザー名</th>
              </tr>
         </thead>
      <tbody>
          <tr>
              <td>
                <%= link_to datas.name, admin_user_path(datas.id) %>
              </td>
          </tr>
      </tbody>
      </table>
      <% end %>
  </div>

<% elsif @model == "book"%>

  <div class="row justify-content-center">
    <table class="table table-striped table-bordered">
      <thead>
          <tr>
            <th>参考書一覧</th>
          </tr>
      </thead>
      <% @datas.each do |datas| %>
      <tbody>
        <tr>
          <td>
            <%= link_to datas.title, admin_book_path(datas.id) %>
          </td>
        </tr>
      </tbody>
    </table>
    <% end %>
  </div>

<% else %>
<p>検索結果はありません</p>
<% end %>