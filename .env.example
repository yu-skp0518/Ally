# 本番デプロイ（Railway 等）で必須。未設定だとアプリが起動しません。
# 生成: bundle exec rails secret
# 本番では必ず環境変数で設定し、リポジトリに含めないこと。
# SECRET_KEY_BASE=your_64_char_secret_from_rails_secret

# 本番デプロイ先で未設定の場合、config/boot.rb で production にフォールバックします。
# 明示的に指定する場合は:
# RAILS_ENV=production

# 管理画面ログイン（db:seed で Admin を 1 件作成するときに使用）
# パスワードは Devise のため 6 文字以上
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=your_password

# 楽天API（書籍検索で使用）
# https://webservice.rakuten.co.jp/ でアプリ登録し、Application ID を取得
RAKUTEN_APP_ID=your_application_id
